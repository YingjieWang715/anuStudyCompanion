<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".discussion.DiscussionAddActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/title_update_note"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="@string/add_new_discussion"
            android:textColor="@color/black"
            android:textSize="32sp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/edit_discussion_title"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/transparent"
            android:hint="@string/title"
            android:inputType="text"
            android:paddingStart="24dp"
            android:paddingEnd="24dp" />

         <EditText
            android:id="@+id/edit_discussion_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@android:color/transparent"
            android:gravity="top|start"
            android:hint="@string/description"
            android:inputType="textMultiLine"
            android:minHeight="400dp"
            android:paddingStart="24dp"
            android:paddingTop="16dp"
            android:paddingEnd="24dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" /> <!-- 这个空视图会占用除按钮外的所有垂直空间 -->

        <Button
            android:id="@+id/submitBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:text="Add Discussion" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>